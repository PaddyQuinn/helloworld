<h1>Collection</h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @collection.name %>
</p>

<p>
  <strong>Story:</strong>
  <%= @collection.desc %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= list.desc %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_collection_path(@collection) %> |
<%= link_to 'Collections', collections_path %>

<%= render 'footer' %>
